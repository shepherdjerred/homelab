{
  "mcpServers": {
    "grafana": {
      "command": "go",
      "args": [
        "run",
        "github.com/grafana/mcp-grafana/cmd/mcp-grafana@latest",
        "--disable-oncall",
        "--disable-incident",
        "--disable-admin",
        "--disable-navigation",
        "--disable-pyroscope"
      ],
      "env": {
        "GRAFANA_URL": "http://prometheus-grafana.prometheus"
      }
    },
    "pagerduty-mcp": {
      "type": "stdio",
      "command": "uvx",
      "args": ["pagerduty-mcp"]
    },
    "Home Assistant": {
      "command": "uvx",
      "args": ["mcp-proxy", "http://homeassistant.tailnet-1a49.ts.net/mcp_server/sse"]
    }
  }
}
