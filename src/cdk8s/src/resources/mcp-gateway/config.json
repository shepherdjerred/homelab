{
  "mcpProxy": {
    "addr": ":9090",
    "name": "MCP Gateway",
    "version": "1.0.0"
  },
  "mcpServers": {
    "canvas": {
      "command": "npx",
      "args": ["-y", "@r-huijts/canvas-mcp@1.0.8"]
    },
    "todoist": {
      "command": "npx",
      "args": ["-y", "todoist-mcp@1.2.4"]
    },
    "piazza": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/clarsbyte/piazza-mcp.git", "piazza-mcp"]
    }
  }
}
