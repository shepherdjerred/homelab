{
  "name": "@homelab/cdk8s",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run src/app.ts && bun run scripts/patch.ts",
    "lint": "bunx eslint .",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test && bun run test:gpu-resources",
    "test:gpu-resources": "bun run scripts/test-gpu-resources.ts",
    "test:shared": "bun test src/monitoring/rules/shared.test.ts",
    "clear": "rm -rf dist/",
    "build-app": "bun run src/app.ts",
    "patch": "bun run scripts/patch.ts",
    "update-imports": "bun run update-imports.ts",
    "generate-helm-types": "cd ../helm-types && bun run generate",
    "up": "bun run build && kubectl apply -f dist",
    "diff": "KUBECTL_EXTERNAL_DIFF=delta DELTA_PAGER=bat BAT_PAGER=/opt/homebrew/bin/less kubectl diff -f dist/torvalds.k8s.yaml"
  },
  "dependencies": {
    "cdk8s": "^2.69.60",
    "cdk8s-plus-31": "^2.2.4",
    "constructs": "^10.4.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "remeda": "^2.21.2",
    "ts-pattern": "^5.7.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "eslint": "^9.28.0",
    "@types/bun": "^1.2.23",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.17",
    "jiti": "^2.6.0",
    "type-fest": "^4.41.0",
    "typescript-eslint": "^8.33.0"
  }
}
