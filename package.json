{
  "name": "homelab",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "src/cdk8s",
    "src/ha"
  ],
  "trustedDependencies": [
    "husky"
  ],
  "dependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.18",
    "eslint": "^9.30.1",
    "prettier": "3.6.2",
    "typescript": "^5",
    "typescript-eslint": "^8.35.1"
  },
  "scripts": {
    "build": "bun run --filter=* build",
    "test": "bun run --filter=* test",
    "lint": "bun run --filter=* lint",
    "typecheck": "bun run --filter=* typecheck",
    "prettier": "bunx prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": "bunx prettier --ignore-unknown --write",
    "**/*.{ts,tsx}": [
      "bunx eslint --fix",
      "bunx tsc --noEmit"
    ]
  }
}
