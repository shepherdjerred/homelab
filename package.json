{
  "name": "homelab",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "src/cdk8s",
    "src/ha",
    "src/helm-types",
    ".dagger"
  ],
  "trustedDependencies": [
    "husky"
  ],
  "dependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.30.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.18",
    "eslint": "^9.30.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "jiti": "^2.6.0",
    "markdownlint-cli2": "^0.18.0",
    "prettier": "3.6.2",
    "typescript": "^5",
    "typescript-eslint": "^8.35.1"
  },
  "scripts": {
    "build": "bun run --filter=* build",
    "test": "bun run --filter=* test",
    "lint": "bun run --filter=* lint",
    "typecheck": "bun run --filter=* typecheck",
    "prettier": "bunx prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": "bunx prettier --ignore-unknown --write",
    "*.md": "bunx markdownlint-cli2 --fix",
    ".github/workflows/*.{yml,yaml}": "actionlint",
    "src/ha/**/*.{ts,tsx}": [
      "bash -c 'cd src/ha && bun run typecheck'",
      "bash -c 'cd src/ha && bunx eslint --cache --fix'",
      "bash -c 'cd src/ha && bun run test'"
    ],
    "src/cdk8s/**/*.{ts,tsx}": [
      "bash -c 'cd src/cdk8s && bunx eslint --cache --fix'",
      "bash -c 'cd src/cdk8s && bun run typecheck'",
      "bash -c 'cd src/cdk8s && bun run test'"
    ],
    ".dagger/**/*.{ts,tsx}": [
      "bash -c 'cd .dagger && bunx eslint --cache --fix'",
      "bash -c 'cd .dagger && bun run typecheck'",
      "bash -c 'cd .dagger && bun run test'"
    ],
    "src/helm-types/**/*.{ts,tsx}": [
      "bash -c 'cd src/helm-types && bunx eslint --cache --fix'",
      "bash -c 'cd src/helm-types && bun run typecheck'",
      "bash -c 'cd src/helm-types && bun run test'"
    ]
  }
}
